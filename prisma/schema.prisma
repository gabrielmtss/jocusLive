generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id                 String   @id @default(uuid())
  title              String
  coverImageUrl      String
  year               Int
  imdbScore          Int
  trailerYouTubeUrl  String
  GameplayYouTubeUrl String

  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Gender {
  id        String   @id @default(uuid())
  name      String
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
